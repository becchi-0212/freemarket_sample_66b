%header
  .top__header
    .top__header__upper
      = link_to image_tag("fmarket_logo_red", alt: "", class: "top__header__upper__logo"), root_path
      = form_for '#' do |f|
        = f.text_field :keyword, type: "search", placeholder: "何かお探しですか？", value: "", class: "top__header__upper__search", name: "keyword", id: ""
        = f.button class: "search-btn" do
          = fa_icon "search" 
    .top__header__menu
      .top__header__menu__left
        .top__header__menu__left__category
          = link_to "#", class: "category" do
            = fa_icon "list"
            カテゴリーから探す
        .top__header__menu__left__brand
          = link_to "#", class: "brand" do
            = fa_icon "tag"
            ブランドから探す
      - if user_signed_in?
        .top__header__menu__right
          .top__header__menu__right__likes
            = link_to "#", class: "menu-link" do
              = fa_icon "heart"
              いいね！一覧
          .top__header__menu__right__notifi
            = link_to "#", class: "menu-link" do
              = fa_icon "bell"
              お知らせ
          .top__header__menu__right__todo
            = link_to "#", class: "menu-link" do
              = fa_icon "check"
              ToDoリスト
          .top__header__menu__right__my-page
            = link_to "/users/#{current_user.id}/" do
              = image_tag "mig.jpeg"
              マイページ
      - else
        .top__header__menu__right
          = link_to new_user_registration_path do
            .top__header__menu__right__new-acount 新規会員登録
          = link_to new_user_session_path do
            .top__header__menu__right__login ログイン