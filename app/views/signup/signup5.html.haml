.body
  .signup-header
    .signup-header__box
      .signup-header-logo
        =link_to root_path do
          =image_tag 'SVG/fmarket_logo_red.svg'
      %nav.signupBar
        %ol.signupList
          %li.signupInfo.marker.marker2
            .mark-name1
              会員情報
            .marking
              .mark
              .mark-line
          %li.signupTell.marker.marker2
            .mark-name2
              電話番号認証
            .marking
              .mark
              .mark-line
          %li.signupAdd.marker.marker2
            .mark-name3
              お届け先住所入力
            .marking
              .mark
              .mark-line
          %li.signupHowToPay.marker.now-point
            .mark-name4
              支払い方法
            .marking
              .mark
              .mark-line
          %li.signupComplete
            .mark-name5
              完了
            .marking
              .mark
              .mark-line
  .credit-box
    .credit-box__title
      %h2 支払い方法
    .credit-box__body
      .push-box
        = form_with url: pay_card_index_path, id: 'inputForm', name: "inputForm", local: true do |f|
          .formbox
            .form-group-credit
              %label.yubinNum-new
                カード番号
              %span.must-content
                必須
              = f.text_field :number, maxlength: "16", type: "text", id: "card_number",  placeholder: "半角数字のみ"
              =image_tag "credit/iconfinder_visa-straight_38613.png"
              =image_tag "credit/iconfinder_mastercard-straight_38603.png"
              =image_tag "credit/iconfinder_american-express-straight_38591.png"
              =image_tag "credit/iconfinder_discover-straight_38599.png"
            .form-group-credit
              %label.prefecture-new
                有効期限
              %span.must-content
                必須
              .select-parrent
                =render "deviseGo/option-card"
            .form-group-credit
              %label.municipality-new
                セキュリティコード
              %span.must-content
                必須
              = f.text_field :cvc, maxlength: "4", id: "cvc", placeholder: "カード背面4桁もしくは3桁の番号"
            = f.submit "次へ進む", class: "go-ahead", id: "token_submit"
            =link_to "", class: "link-for-user-info" do
              カード裏面の番号とは？
              =fa_icon'chevron-right'
  =render "devise/shared/footer-login"