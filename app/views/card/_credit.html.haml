.credit-box
  .credit-box__title
    %h2 支払い方法
  .credit-box__body
    .push-box
      .formbox
        .form-group-credit
          = form_tag(pay_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
            %label.yubinNum-new
              カード番号
            %span.must-content
              必須
            = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
            =image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/visa.svg?3649802486", width:"45",height:"25x"
            =image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?3649802486", width:"35",height:"25x"
            =image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?3649802486", width:"35",height:"25x"
            =image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?3649802486", width:"35",height:"25x"
            =image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?3649802486", width:"35",height:"25x"
            =image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?3649802486", width:"35",height:"25x"
            =image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/discover.svg?3649802486", width:"35",height:"25x"
            
          .form-group-credit
            %label.prefecture-new
              有効期限
            %span.must-content
              必須
            .select-parrent
              %select#exp_month{name: "exp_month", type: "text"}
                %option{value: ""} --
                %option{value: "1"}01
                %option{value: "2"}02
                %option{value: "3"}03
                %option{value: "4"}04
                %option{value: "5"}05
                %option{value: "6"}06
                %option{value: "7"}07
                %option{value: "8"}08
                %option{value: "9"}09
                %option{value: "10"}10
                %option{value: "11"}11
                %option{value: "12"}12
              %span 月/
              %select#exp_year{name: "exp_year", type: "text"}
                %option{value: ""} --
                %option{value: "2019"}19
                %option{value: "2020"}20
                %option{value: "2021"}21
                %option{value: "2022"}22
                %option{value: "2023"}23
                %option{value: "2024"}24
                %option{value: "2025"}25
                %option{value: "2026"}26
                %option{value: "2027"}27
                %option{value: "2028"}28
                %option{value: "2029"}29
              %span 年
              %br
          .form-group-credit
            %label.municipality-new
              セキュリティコード
            %span.must-content
              必須
            = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
          = submit_tag "追加する", id: "token_submit"
          =link_to "", class: "link-for-user-info" do
            カード裏面の番号とは？
            =fa_icon'chevron-right'