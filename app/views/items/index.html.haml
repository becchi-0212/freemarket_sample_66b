= render "layouts/header"
.main
  .main__slide-image
    = image_tag "top-slide.png", class: "slide-image"
  .main__category
    .main__category-tema
      人気のカテゴリー
    %ul.category-list
      %li
        =link_to "レディース", class: "category-list-item"
      %li
        =link_to "メンズ", class: "category-list-item"
      %li
        =link_to "家電・スマホ・カメラ", class: "category-list-item"
      %li
        =link_to "おもちゃ・ホビー・グッズ", class: "category-list-item"
  .main__items
    .main__items__box
      .main__items__box-tema
        レディース新着アイテム
        = link_to "もっと見る ＞", class: "items-and-more"
      %ul.main__items__list
        - @ladies.each do |lady|
          %li.main__items__box__list
            = link_to "items/#{lady.id}" do
              .main__items__box__list-image
                = image_tag lady.image
                .main__items__box__list-price
                  = "¥#{lady.price.to_s(:delimited)}"
              .main__items__box__list-index
                = lady.name
    .main__items__box
      .main__items__box-tema
        メンズ新着アイテム
        = link_to "もっと見る ＞", class: "items-and-more"
      %ul.main__items__list
        - @mens.each do |men|
          %li.main__items__box__list
            = link_to "items/#{men.id}" do
              .main__items__box__list-image
                = image_tag men.image
                .main__items__box__list-price
                  = "¥#{men.price.to_s(:delimited)}"
              .main__items__box__list-index
                = men.name
    .main__items__box
      .main__items__box-tema
        家電・スマホ・カメラ新着アイテム
        = link_to "もっと見る ＞", class: "items-and-more"
