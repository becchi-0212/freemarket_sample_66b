.body-side
  =render "login-header"
  .parent
    =render "side-barMypage"
    .credit-box
      .credit-box__title
        %h2 クレジットカード情報入力
      .credit-box__body
        .push-box
          =form_for "#" do |f|
            .formbox
              .form-group-credit
                %label.yubinNum-new
                  カード番号
                %span.must-content
                  必須
                %input.yubinNum-info{placeholder: "半角数字のみ", value: ""}/
                =image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/visa.svg?3649802486", width:"45",height:"25x"
                =image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?3649802486", width:"35",height:"25x"
                =image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?3649802486", width:"35",height:"25x"
                =image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?3649802486", width:"35",height:"25x"
                =image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?3649802486", width:"35",height:"25x"
                =image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?3649802486", width:"35",height:"25x"
                =image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/discover.svg?3649802486", width:"35",height:"25x"
              .form-group-credit
                %label.prefecture-new
                  有効期限
                %span.must-content
                  必須
                .select-parrent
                  =render "option-birthMonth"
              .form-group-credit
                %label.municipality-new
                  セキュリティコード
                %span.must-content
                  必須
                %input.password-info{placeholder: "カード背面4桁もしくは3桁の番号", value: ""}/
              =link_to "" do
                =f.button "追加する", class: "go-ahead"
              =link_to "", class: "link-for-user-info" do
                カード裏面の番号とは？
                =fa_icon'chevron-right'
  =render "footer"